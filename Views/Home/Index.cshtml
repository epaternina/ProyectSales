@{
    ViewBag.Title = "API Status";
}

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>API Status</title>
    <style>
        body {
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #1e1e2e;
            font-family: Arial, sans-serif;
        }

        .card {
            text-align: center;
            background: #2e2e3e;
            padding: 50px 80px;
            border-radius: 16px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.4);
        }

        .dot {
            width: 18px;
            height: 18px;
            background: #4caf50;
            border-radius: 50%;
            display: inline-block;
            margin-right: 10px;
            animation: pulse 1.5s infinite;
        }

        @@keyframes pulse {
            pulse {
                0%

        {
            box-shadow: 0 0 0 0 rgba(76,175,80,0.6);
        }

        70% {
            box-shadow: 0 0 0 12px rgba(76,175,80,0);
        }

        100% {
            box-shadow: 0 0 0 0 rgba(76,175,80,0);
        }

        }

        h1 {
            color: #ffffff;
            font-size: 2.5rem;
            margin: 0 0 10px;
        }

        p {
            color: #aaaaaa;
            font-size: 1rem;
            margin: 0;
        }

        .badge {
            display: inline-flex;
            align-items: center;
            background: #1a3a1a;
            border: 1px solid #4caf50;
            border-radius: 20px;
            padding: 6px 16px;
            margin-bottom: 24px;
        }

            .badge span {
                color: #4caf50;
                font-size: 0.9rem;
            }
    </style>
</head>
<body>
    <div class="card">
        <div class="badge">
            <div class="dot"></div>
            <span>Running</span>
        </div>
        <h1>⚡ API is Running</h1>
        <p>Sales Web API 2 — .NET Framework 4.8</p>
        <br>
        <p style="color:#666;">https://localhost:44394/api</p>
    </div>
</body>
</html>